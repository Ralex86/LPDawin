import java.util.Date;

public class Reservation {
	private int numReservation;
	private Date dateDepart;
	private Date dateRetour;
	private boolean estPaye;
	private Voyage voyage;
	
	public Reservation(int num, Date depart, Date retour, boolean paye, Voyage v) {
		numReservation = num;
		dateDepart = depart;
		dateRetour = retour;
		estPaye = paye;
		voyage = v;
	}
	
	public Date getDateDepart() {
		return dateDepart;
	}
	
	public Date getDateRetour() {
		return dateRetour;
	}
	
	public void afficher() {
		System.out.println();
		System.out.println("Numéro de réservation: "+ numReservation);
		System.out.println("Date de départ: " + dateDepart);
		System.out.println("Date de retour: " + dateRetour);
		System.out.println("Voyage payé: " + (estPaye ? "Oui" : "Non"));
		voyage.afficher();
	}
}
