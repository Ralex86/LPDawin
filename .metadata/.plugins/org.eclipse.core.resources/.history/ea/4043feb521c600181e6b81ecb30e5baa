import java.util.ArrayList;
import java.util.Date;

public class Client {
	private int numClient;
	private String nom;
	private String prenom;
	private ArrayList<Reservation> mesReservations;
	
	public Client(int num, String n, String p) {
		numClient = num;
		nom = n;
		prenom = p;
		mesReservations = new ArrayList<Reservation>();
	}
	
	public void afficher() {
		System.out.println();
		System.out.println("Numéro de client: " + numClient);
		System.out.println("Nom du client: " + nom);
		System.out.println("Prénom du client: " + prenom);
		for (Reservation r: mesReservations) {
			r.afficher();
		}
	}
	
	public void afficherListResaPassees() {
		System.out.println(" -- Liste des réservations passées -- ");
		Date d = new Date();
		for (Reservation r : mesReservations) {
			if (r.getDateRetour().before(d))
				r.afficher();
		}
	}
	
	public void afficherListResaEnCours() {
		System.out.println(" -- Liste des réservations en cours -- ");
		Date d = new Date();
		for (Reservation r : mesReservations) {
			if (r.getDateDepart().after(d) && r.getDateRetour().before(d))
				r.afficher();
		}
	}
	
	public void afficherListResaAVenir() {
		System.out.println(" -- Liste des réservations à venir -- ");
		Date d = new Date();
		for (Reservation r : mesReservations) {
			if (r.getDateDepart().before(d))
				r.afficher();
		}
	}
	
	public void ajouterReservation(Reservation resa) {
		mesReservations.add(resa);
	}
}
